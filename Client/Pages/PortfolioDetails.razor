@page "/portfoliodetails/{id:int}"

@if (portfolio != null)
{
    <div class="row w-100">
        <div class="col-6">
            Portfolio Name
        </div>
        <div class="col-6">
            <p>@portfolio.NameOfPortfolio</p>
        </div>
    </div>
    <div class="row w-100">
        <div class="col-6">
            StockesOwned
        </div>
        <div class="col-6">
            @if (portfolio.Securities != null){
                <p>@portfolio.Securities</p>
            }else {
                <p>0</p>
            }
        </div>
    </div>
    <div class="row w-100">
        <div class="col-6">
            Date-Time Created
        </div>
        <div class="col-6">
            <p>@portfolio.DateTimeCreated</p>
        </div>
    </div>
    <div class="row w-100">
        <div class="col-6">
            Description
        </div>
        <div class="col-6">
            <p>@portfolio.Description</p>
        </div>
    </div>
    @*<button class="btn btn-primary" @onclick="NavigationToSecurity">Add Security</button>*@
    <a href="/portfolioDetails/addSecurity/@portfolio.PortfolioId">Add Security</a>

    @*<div class="row w-100">
        <div class="col-12">
            <a href="/editsecurity/@security.Id" class="btn btn-primary">Edit</a>
            <button type="button" class="btn btn-danger" @onclick="async () => OpenDeleteDialog(security)">Delete</button>
        </div>
    </div>*@
}


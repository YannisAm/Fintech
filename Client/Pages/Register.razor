@page "/register"

<EditForm Model="request">
    <DataAnnotationsValidator />
    <div class="mb-3">
        <label for="email">Email</label>
        <InputText id="email" @bind-Value="request.Email" class="form-control"></InputText>
    </div>
    <ValidationMessage For="@(() => request.Email)" />
    <div class="mb-3">
        <label for="password">Password</label>
        <InputText id="password" @bind-Value="request.Password" class="form-control" type="password"></InputText>
    </div>
    <ValidationMessage For="@(() => request.Password)" />
    <div class="mb-3">
        <label for="confirmPassword">Confirm Password</label>
        <InputText id="confirmPassword" @bind-Value="request.ConfirmPassword" class="form-control" type="password"></InputText>
    </div>
    <ValidationMessage For="@(() => request.ConfirmPassword)" />
    <br />
    <button type="submit" class="btn btn-primary" @onclick="HandleSubmit">Register</button>
    <div class="@messageColor">
        <span>@message</span>
    </div>
</EditForm>
